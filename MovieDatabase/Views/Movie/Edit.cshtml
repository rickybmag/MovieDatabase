@model Movie

<h2>Edit @Model.Title</h2>
<br />
<div>
    <form asp-action="Edit" method="post">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" value="@Model.Title" />
        <span asp-validation-for="Title" class="text-danger"></span><br /><br />

        <label asp-for="Year" class="control-label"></label>
        <input asp-for="Year" class="form-control" value="@Model.Year" />
        <span asp-validation-for="Year" class="text-danger"></span><br /><br />

        <label asp-for="Runtime" class="control-label"></label>
        <input asp-for="Runtime" class="form-control" value="@Model.Runtime" />
        <span asp-validation-for="Runtime" class="text-danger"></span><br /><br />

        <label asp-for="Genre" class="control-label"></label>
        <select asp-for="Genre">
            <option value="Animation">Animation</option>
            <option value="Horror">Horror</option>
            <option value="Drama">Drama</option>
            <option value="Action">Action</option>
            <option value="Comedy">Comedy</option>
        </select><br />
        <span asp-validation-for="Genre" class="text-danger"></span><br /><br />

        <input type="submit" />
    </form>
